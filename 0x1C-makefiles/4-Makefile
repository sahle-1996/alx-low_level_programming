COMPILER = gcc
SOURCE = main.c school.c
OBJECTS = $(SOURCE:.c=.o)
EXECUTABLE = school
REMOVE = rm -f
FLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJECTS)
	$(COMPILER) $(OBJECTS) -o $(EXECUTABLE)

%.o: %.c
	$(COMPILER) $(FLAGS) -c $< -o $@

clean:
	$(REMOVE) *~ $(EXECUTABLE)

oclean:
	$(REMOVE) $(OBJECTS)

fclean: clean oclean

re: fclean all
